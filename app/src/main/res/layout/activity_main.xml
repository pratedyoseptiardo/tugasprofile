<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/background" >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:background="@drawable/bgcolor"
            android:contentDescription="@string/todo" />

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="80dp" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tenti Pristiani"
                android:textStyle="bold"
                android:textSize="25sp"
                android:layout_marginTop="170dp"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_marginStart="0dp"
                android:src="@drawable/foto"
                />
        </FrameLayout>

    </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
            android:id="@+id/tv_heart"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:text="@string/like"
            android:textSize="30sp"
            android:drawableStart="@drawable/ic_favorite_black_24dp"
            android:drawablePadding="20dp"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="10dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="110dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@android:color/black"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginTop="50dp"
                android:layout_marginStart="300dp"/>

            <TextView
                android:id="@+id/tv_comment"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/comment"
                android:textSize="30sp"
                android:drawableStart="@drawable/ic_comment_black_24dp"
                android:drawablePadding="20dp"
                android:layout_marginTop="125dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="185dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@android:color/black"
                android:contentDescription="@string/todo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginTop="125dp"
                android:layout_marginStart="300dp"/>


            <TextView
                android:id="@+id/tv_chat"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:text="@string/update"
                android:textSize="30sp"
                android:drawableStart="@drawable/ic_edit_black_24dp"
                android:drawablePadding="20dp"
                android:layout_marginTop="200dp"
                android:layout_marginLeft="25dp"
                android:layout_marginRight="25dp"/>


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="260dp"
                android:layout_marginLeft="0dp"
                android:layout_marginRight="0dp"
                android:background="@android:color/black"
                android:contentDescription="@string/todo" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableStart="@drawable/ic_keyboard_arrow_right_black_24dp"
                android:layout_marginTop="200dp"
                android:layout_marginStart="300dp"/>

            <TextView
                android:id="@+id/tv_set"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="280dp"
                android:layout_marginRight="25dp"
                android:drawableStart="@drawable/ic_settings_black_24dp"
                android:drawablePadding="20dp"
                android:text="@string/settings"
                android:textSize="30sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Profile"
                android:drawableTop="@drawable/ic_account_circle_black_24dp"
                android:layout_marginTop="360dp"
                android:layout_marginStart="50dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:drawableTop="@drawable/ic_home_black_24dp"
                android:layout_marginTop="360dp"
                android:layout_marginStart="180dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="People"
                android:drawableTop="@drawable/ic_account_circle_black_24dp"
                android:layout_marginTop="360dp"
                android:layout_marginLeft="300dp" />

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="350dp"
                android:background="@drawable/bgcolor"
                android:contentDescription="@string/todo" />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>
